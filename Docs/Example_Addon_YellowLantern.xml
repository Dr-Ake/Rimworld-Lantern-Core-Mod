<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- ========================================== -->
  <!-- Example Addon: Yellow Lantern Core (Fear)  -->
  <!-- ========================================== -->

  <!-- 1. The Ring Item -->
  <ThingDef ParentName="Lantern_RingBase">
    <defName>YL_Ring</defName>
    <label>yellow lantern ring</label>
    <description>A power ring fueled by fear.</description>
    <graphicData>
      <texPath>YellowLantern/Items/YL_Ring</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <color>(1, 0.9, 0, 1)</color>
    </graphicData>
    <statBases>
      <MarketValue>5000</MarketValue>
      <Mass>0.1</Mass>
    </statBases>

    <modExtensions>
      <li Class="DrAke.LanternsFramework.LanternDefExtension">
        <ringColor>(1, 0.9, 0, 1)</ringColor>
        <resourceLabel>Fear</resourceLabel>

        <blastDamage>18</blastDamage>
        <blastDamageType>Burn</blastDamageType>

        <abilities>
          <li>YL_Ability_Blast</li>
          <li>YL_Ability_FearBind</li>
          <li>YL_Ability_FearAura</li>
        </abilities>

        <!-- Optional batteries / costumes can go here. -->
      </li>
    </modExtensions>
  </ThingDef>

  <!-- 2. Abilities (short example) -->
  <AbilityDef ParentName="Lantern_Ability_BlastBase">
    <defName>YL_Ability_Blast</defName>
    <label>fear blast</label>
    <iconPath>YellowLantern/UI/Blast</iconPath>
  </AbilityDef>

  <AbilityDef ParentName="Lantern_Ability_StunBase">
    <defName>YL_Ability_FearBind</defName>
    <label>fear bind</label>
    <iconPath>YellowLantern/UI/Bind</iconPath>
    <comps Inherit="False">
      <li Class="DrAke.LanternsFramework.Abilities.CompProperties_LanternStun">
        <stunTicks>240</stunTicks>
        <radius>2.5</radius>
        <affectHostilesOnly>true</affectHostilesOnly>
      </li>
      <li Class="DrAke.LanternsFramework.Abilities.CompProperties_LanternCost">
        <cost>0.06</cost>
      </li>
    </comps>
  </AbilityDef>

  <AbilityDef ParentName="Lantern_Ability_AuraBase">
    <defName>YL_Ability_FearAura</defName>
    <label>aura of fear</label>
    <iconPath>YellowLantern/UI/Aura</iconPath>
    <statBases>
      <Ability_EffectRadius>6</Ability_EffectRadius>
    </statBases>
    <comps Inherit="False">
      <li Class="DrAke.LanternsFramework.Abilities.CompProperties_LanternBuffAura">
        <hediffDef>YL_Hediff_FearBuff</hediffDef>
        <severity>0.12</severity>
        <radius>6</radius>
        <durationTicks>6000</durationTicks>
        <affectAlliesOnly>false</affectAlliesOnly>
      </li>
      <li Class="DrAke.LanternsFramework.Abilities.CompProperties_LanternCost">
        <cost>0.05</cost>
      </li>
    </comps>
  </AbilityDef>

  <HediffDef>
    <defName>YL_Hediff_FearBuff</defName>
    <label>fear surge</label>
    <hediffClass>HediffWithComps</hediffClass>
  </HediffDef>

  <!-- 3. Selection Logic -->
  <DrAke.LanternsFramework.RingSelectionDef>
    <defName>YL_Selection_Fear</defName>
    <ringDef>YL_Ring</ringDef>

    <triggerMentalState>true</triggerMentalState>
    <mentalStates>
      <li>PanicFlee</li>
      <li>Wander_Psychotic</li>
    </mentalStates>

    <conditions>
      <li Class="DrAke.LanternsFramework.Condition_Mood">
        <lowerIsBetter>true</lowerIsBetter>
        <scoreMultiplier>6</scoreMultiplier>
      </li>
      <li Class="DrAke.LanternsFramework.Condition_Stat">
        <stat>MentalBreakThreshold</stat>
        <lowerIsBetter>false</lowerIsBetter>
        <scoreMultiplier>5</scoreMultiplier>
      </li>
    </conditions>
  </DrAke.LanternsFramework.RingSelectionDef>

</Defs>
